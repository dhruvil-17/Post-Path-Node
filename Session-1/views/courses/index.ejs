<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="bg-primary text-white p-3 mb-4">
        <div class="container">
            <h1><a href="/" class="text-white text-decoration-none">Course Management System</a></h1>
        </div>
    </div>
    
    <div class="container">
        <h2>All Courses</h2>
        <a href="/add" class="btn btn-success mb-3">Add New Course</a>

        <% if (courses.length === 0) { %>
            <div class="alert alert-info">No courses found. <a href="/add">Add your first course</a></div>
        <% } else { %>
            <table class="table table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Course Name</th>
                        <th>Duration</th>
                        <th>Fees</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% courses.forEach(course => { %>
                        <tr>
                            <td><%= course.courseName %></td>
                            <td><%= course.courseDuration %></td>
                            <td>$<%= course.courseFees %></td>
                            <td>
                                <a href="/edit/<%= course.id %>" class="btn btn-warning btn-sm">Edit</a>
                                <a href="/delete/<%= course.id %>" class="btn btn-danger btn-sm" 
                                   onclick="return confirm('Delete this course?')">Delete</a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } %>
    </div>
</body>
</html>