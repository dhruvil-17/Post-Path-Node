<h2>Signup</h2>

<form action="/signup" method="POST">

  <input type="text" name="username" placeholder="User Name" required />
  <br /><br />

  <input
    type="email"
    name="email"
    placeholder="Email"
    required
  />
  <br /><br />

 <input
    type="password"
    name="password"
    placeholder="Password"
    required
  />

  <br /><br />

<% if (typeof error !== 'undefined') { %>
    <p style="color: red;"><%= error %></p>
  <% } %>

  <button type="submit">Signup</button>

</form>
