
<%- include('../partials/navbar', { isLoggedIn: false }) %>
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<div class="card mt-5">
<h2 class="text-center mb-4">Signup</h2>

<form action="/signup" method="POST" class="container" style="max-width: 400px;">

  <div class="mb-3">
    <input
      type="text"
      name="username"
      class="form-control"
      placeholder="User Name"
      required
    />
  </div>

  <div class="mb-3">
    <input
      type="email"
      name="email"
      class="form-control"
      placeholder="Email"
      required
    />
  </div>

  <div class="mb-3">
    <input
      type="password"
      name="password"
      class="form-control"
      placeholder="Password"
      required
    />
  </div>

  <% if (typeof error !== 'undefined') { %>
    <div class="alert alert-danger">
      <%= error %>
    </div>
  <% } %>

  <button type="submit" class="btn btn-primary w-100">
    Signup
  </button>

  <p class="m-1">Already have an account ? <a href="/login">Log in</a></p>

</form>
</div>